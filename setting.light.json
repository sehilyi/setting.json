{
  "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.inheritEnv": false,
    "editor.maxTokenizationLineLength": 200000,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "scm.diffDecorations": "gutter",
    "editor.wordWrapColumn": 100,
    "files.associations": {
      "*.rmd": "markdown"
    },
    "customizeUI.stylesheet": {
      // Remove top-right icons: Not working
      ".editor-actions": "display: none !important;",
      ".actions-container[aria-label='Editor actions']": "display: none !important;"
    },
    "typescript.format.semicolons": "remove",
    "python.showStartPage": false,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#00B4F7",
        // Glyphs
        "minimapGutter.modifiedBackground": "#3e8daa",
        "editorGutter.modifiedBackground":"#3e8daa",
        "minimapGutter.addedBackground": "#3e8daa",
        "editorGutter.addedBackground":"#3e8daa",
        "minimapGutter.deletedBackground": "#3e8daa",
        "editorGutter.deletedBackground":"#3e8daa",
        // "minimapGutter.addedBackground": "#57aa3e",
        // "editorGutter.addedBackground":"#57aa3e",
        // "minimapGutter.deletedBackground": "#aa3e50",
        // "editorGutter.deletedBackground":"#aa3e50",
        "editorGutter.foldingControlForeground": "#a4a4a4",

        // Glyph on the right
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",

        // Widget (e.g., textbox)
        "editorWidget.foreground": "#a4a4a4",
        "editorWidget.background": "#F7F7F7",
        "editorWidget.border": "#ededed",
        "editorHoverWidget.foreground": "#a4a4a4",
        "editorHoverWidget.background": "#F7F7F7",
        "editorHoverWidget.border": "#ededed",

        // Peek View (e.g., F12)
        "peekViewEditor.background": "#ededed",
        "peekViewEditorGutter.background": "#ededed",
        "peekViewResult.background": "#ededed",
        "peekViewTitle.background": "#ededed",

        "sideBarTitle.foreground": "#a4a4a4",
        "sideBar.foreground": "#a4a4a4",
        "tab.hoverForeground": "#a4a4a4",
        // "editorCursor.foreground": "#000",
        "editorWarning.foreground": "#bdb35a",
        "editorError.foreground": "#bd5a5a",
        "editorIndentGuide.background": "#ededed",
        "editorIndentGuide.activeBackground": "#ededed",
        "tab.activeBorderTop": "#00B4F7",
        "tab.inactiveBorderTop": "#ededed",
        "scrollbarSlider.background":"#ededed",
        "scrollbarSlider.hoverBackground": "#a4a4a4",
        "scrollbarSlider.activeBackground": "#a4a4a4",
        "editor.lineHighlightBackground": "#ededed", // "#ededed",
        "editor.lineHighlightBorder": "#ededed", // "#454545",
        "editorLineNumber.foreground": "#ededed",
        "editorGroup.border": "#ededed", // between groups of views

        // primary background color
        "window.activeBorder": "#F7F7F7",
        "titleBar.activeForeground": "#F7F7F7",
        "titleBar.activeBackground": "#F7F7F7",
        "titleBar.inactiveBackground": "#F7F7F7",
        "titleBar.inactiveForeground": "#F7F7F7",
        "titleBar.border":"#F7F7F7",
        "window.inactiveBorder": "#F7F7F7",
        "editor.background": "#F7F7F7",
        "sideBar.background": "#F7F7F7",
        "sideBar.border": "#F7F7F7",
        "sideBarSectionHeader.border": "#F7F7F7",
        "scrollbar.shadow": "#F7F7F7",
        "editorGutter.background": "#F7F7F7",
        "editorGroupHeader.tabsBorder": "#F7F7F7",
        "tab.unfocusedActiveBorder": "#F7F7F7",
        "editorGroupHeader.border": "#F7F7F7",
        "tab.hoverBorder": "#F7F7F7",
        "tab.border": "#F7F7F7",
        "tab.activeBorder": "#F7F7F7",
        "tab.inactiveBorder": "#F7F7F7",
        "tab.hoverBackground": "#F7F7F7",
        "tab.activeBackground": "#F7F7F7",
        "tab.inactiveBackground": "#F7F7F7",
        "editorGroupHeader.tabsBackground": "#F7F7F7",
        "editorPane.background": "#F7F7F7",
        "statusBar.background": "#F7F7F7",
        "statusBar.border": "#F7F7F7",
    },
    "editor.tokenColorCustomizations": {
        // "comments": "#678353",
        "textMateRules": [
          {
            // Disable all italic fonts
            "scope": [
              "comment",
              "comment.block",
              "comment.block.documentation",
              "comment.line",
              "constant",
              "constant.character",
              "constant.character.escape",
              "constant.numeric",
              "constant.numeric.integer",
              "constant.numeric.float",
              "constant.numeric.hex",
              "constant.numeric.octal",
              "constant.other",
              "constant.regexp",
              "constant.rgb-value",
              "emphasis",
              "entity",
              "entity.name",
              "entity.name.class",
              "entity.name.function",
              "entity.name.method",
              "entity.name.section",
              "entity.name.selector",
              "entity.name.tag",
              "entity.name.type",
              "entity.other",
              "entity.other.attribute-name",
              "entity.other.inherited-class",
              "invalid",
              "invalid.deprecated",
              "invalid.illegal",
              "keyword",
              "keyword.control",
              "keyword.operator",
              "keyword.operator.new",
              "keyword.operator.assignment",
              "keyword.operator.arithmetic",
              "keyword.operator.logical",
              "keyword.other",
              "markup",
              "markup.bold",
              "markup.changed",
              "markup.deleted",
              "markup.heading",
              "markup.inline.raw",
              "markup.inserted",
              "markup.italic",
              "markup.list",
              "markup.list.numbered",
              "markup.list.unnumbered",
              "markup.other",
              "markup.quote",
              "markup.raw",
              "markup.underline",
              "markup.underline.link",
              "meta",
              "meta.block",
              "meta.cast",
              "meta.class",
              "meta.function",
              "meta.function-call",
              "meta.preprocessor",
              "meta.return-type",
              "meta.selector",
              "meta.tag",
              "meta.type.annotation",
              "meta.type",
              "punctuation.definition.string.begin",
              "punctuation.definition.string.end",
              "punctuation.separator",
              "punctuation.separator.continuation",
              "punctuation.terminator",
              "storage",
              "storage.modifier",
              "storage.type",
              "string",
              "string.interpolated",
              "string.other",
              "string.quoted",
              "string.quoted.double",
              "string.quoted.other",
              "string.quoted.single",
              "string.quoted.triple",
              "string.regexp",
              "string.unquoted",
              "strong",
              "support",
              "support.class",
              "support.constant",
              "support.function",
              "support.other",
              "support.type",
              "support.type.property-name",
              "support.variable",
              "variable",
              "variable.language",
              "variable.name",
              "variable.other",
              "variable.other.readwrite",
              "variable.parameter",
              "source.dart",  
            ],
            "settings": {
              "fontStyle": ""
            }
          }
        ]
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.iconTheme": "vs-seti",
    "jupyter.askForKernelRestart": false,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.editorAssociations": [
      {
        "viewType": "jupyter.notebook.ipynb",
        "filenamePattern": "*.ipynb"
      }
    ],
    "editor.fontFamily": "'Fira Code', Monokai, Roboto Mono, Menlo, Monaco, Input Mono Condensed, Roboto Mono, 'Courier New', monospace, Consolas",
    "editor.fontWeight": 500,
    "editor.fontLigatures": true,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "solid",
    "editor.fontSize": 12,
    "editor.lineHeight": 22,
    "launch": {
      "configurations": [],
      "compounds": []
    },
    "workbench.activityBar.visible": false,
    "editor.renderWhitespace": "none",
    "breadcrumbs.enabled": false,
    "notebook.breadcrumbs.showCodeCells": false,
    "editor.rulers": [],
    "timeline.excludeSources": [
      "git-history"
    ],
    "editor.overviewRulerBorder": false,
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": false,
    "workbench.colorTheme": "Night Owl Light (No Italics)",
    "window.zoomLevel": 2,
}
